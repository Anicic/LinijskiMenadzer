@model WebApplication.Models.ObavjestenjeViewModel

<div class="row">

    <div class="col-lg-3 pl-0">
        <img src="https://cdn2.iconfinder.com/data/icons/people-3-2/128/Programmer-Avatar-Backend-Developer-Nerd-512.png" class="col-lg-12" />
    </div>

    <div class="col-lg-9">
        <h3>@Model.PosiljalacIme</h3>
        <h5>@Model.Email</h5>
        <h5>@Model.BrojTelefona</h5>
    </div>

</div>

<dl class="row mt-3">
    <dt class="col-sm-3 h3">Naslov</dt>
    <dd class="col-sm-9">@Html.Raw(Model.ObavjestenjeNaziv)</dd>

    <dt class="col-sm-3 h3 mt-3">Obavještenje</dt>
    <dd class="col-sm-9 pt-3">
        @Html.Raw(Model.OpisObavjestenja)
    </dd>

    <dt class="col-sm-3 h3 mt-3">Poruka</dt>
    <dd class="col-sm-9 pt-3">@Html.Raw(Model.SadrzajObavjestenja)</dd>
</dl>
@{

    if (Model.Odobreno == null && Model.TipObavjestenjaID != 4)
    {

        <div class="row mt-3">

            <div class="col-lg-12">
                <div class="styled-checkbox">
                    <input type="checkbox" name="checkbox" id="obrazlozenje">
                    <label for="obrazlozenje">Obrazloženje</label>
                </div>
            </div>

        </div>

        <div id="poruka">

        </div>

        <div class="row mt-2">
            <div class="col-lg-12">
                <button type="button" style="float:right" id="btnZabrani" class="btn btn-outline-danger mr-0 mb-2"><i class="fas fa-times-circle"></i>Zabrani</button>
                <button type="button" style="float:right" id="btnOdobri" class="btn btn-outline-primary mr-0 mb-2"><i class="fas fa-check-circle"></i>Odobri</button>
            </div>
        </div>

    }
    else
    {

        var tekstOdobreno = (Model.Odobreno == true ? "Odobreno" : "Odbijeno");

        <dl class="row mt-3">
            <dt class="col-sm-3 h3">Status</dt>
            <dd class="col-sm-9">@tekstOdobreno</dd>
        </dl>
        }
    }
